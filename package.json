{
  "name": "easy-browser",
  "version": "0.2.0",
  "description": "一个简单的定制化浏览器",
  "main": "index.js",
  "scripts": {
    "dev": "webpack server --config ./config/webpack.dev.js",
    "build": "webpack --config ./config/webpack.prod.js && node ./script/public.js && electron-builder && devby --delete dist"
  },
  "keywords": [
    "electron",
    "browser"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fragement-contrib/Easy-Browser.git"
  },
  "license": "MIT",
  "author": "zxl20070701",
  "build": {
    "productName": "Easy Browser",
    "appId": "io.github.zxl20070701.easy-browser",
    "directories": {
      "output": "release"
    },
    "files": [
      "./nodejs/**/*",
      "./index.js",
      "./preload.js",
      "./dist/**/*",
      "./images/**/*",
      "./static/**/*",
      "./src/styles/normalize.css",
      "./node_modules/vislite/lib/index.umd.min.js"
    ],
    "fileAssociations": [
      {
        "ext": "html",
        "name": "Easy Browser File",
        "description": "Easy Browser File",
        "icon": "images/logo",
        "role": "Editor"
      }
    ],
    "mac": {
      "icon": "./images/logo.icns",
      "target": [
        {
          "target": "dmg"
        }
      ]
    },
    "dmg": {
      "title": "Easy Browser",
      "icon": "./images/logo.icns"
    },
    "win": {
      "icon": "./images/logo256.ico",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerHeaderIcon": "./images/logo64.ico",
      "installerIcon": "./images/logo64.ico"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.7.2",
    "electron": "^22.1.0",
    "electron-builder": "^23.6.0",
    "html-webpack-plugin": "^5.5.0",
    "sass": "^1.56.1",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "devby": "^0.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.4",
    "vislite": "^0.4.0"
  }
}